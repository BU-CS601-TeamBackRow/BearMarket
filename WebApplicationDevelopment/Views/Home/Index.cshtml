        @Html.ActionLink("What We Belive", "About", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-4">
        <h2>Contact us</h2>
        <p>We are always willing to provide any other information you desire.</p>
        @Html.ActionLink("Speak to Us", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
