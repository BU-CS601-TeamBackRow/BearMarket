@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Bull Market Analysis</h1>
    <p class="lead">Bear Market Analysis is the premier site to monitor your portfolio and track securities of interest.</p>
    <p><a href="~/Account/Register.cshtml" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Simply register for free, add your stocks, and expand your potential!
        </p>
        @Html.ActionLink("Begin Here", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
